<?xml version="1.0" encoding="utf-8"?>
<com.tech7fox.myoassistant.MyoView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:padding="14dp"
    android:elevation="10dp"
    android:background="@drawable/rounded_rectangle">

    <TextView
        android:id="@+id/tv_title"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="Myo1"
        tools:text="Myo1" />

    <TextView
        android:id="@+id/tv_batterylevel"
        style="@style/TextAppearance.AppCompat.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tv_title"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="100dp"
        android:text="Battery"
        tools:text="Battery 00%" />

    <TextView
        android:id="@+id/tv_state"
        style="@style/TextAppearance.AppCompat.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tv_address"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="100dp"
        android:text="State"
        tools:text="Disconnected" />

    <TextView
        android:id="@+id/tv_firmware"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_alignParentStart="true"
        android:text="Firmware"
        tools:text="Firmware: v0.0.0 - 0" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_firmware"
        android:text="Address"
        tools:text="AA:AA:AA:AA:AA:AA" />

    <Button
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        app:icon="@android:drawable/ic_dialog_info"
        app:iconSize="20dp" />

</com.tech7fox.myoassistant.MyoView>